{
    "name": "@repo/indexer",
    "version": "1.0.0",
    "license": "MIT",
    "private": true,
    "scripts": {
        "monitor:build": "esbuild --bundle --platform=node monitor/server.ts --outfile=monitor/dist/server.js --external:express --external:bullmq",
        "monitor:build:production": "yarn monitor:build --minify",
        "monitor:build:development": "yarn monitor:build --sourcemap",
        "monitor:serve:production": "NODE_ENV=production node ./monitor/dist/server.js",
        "monitor:serve:development": "NODE_ENV=development node ./monitor/dist/server.js",
        "monitor:dev": "nodemon --config nodemon.monitor.json",
        "transformer:build": "esbuild --bundle --platform=node transformer/server.ts --outfile=transformer/dist/server.js --external:express --external:bullmq",
        "transformer:build:production": "yarn transformer:build --minify",
        "transformer:build:development": "yarn transformer:build --sourcemap",
        "transformer:serve:production": "NODE_ENV=production node ./transformer/dist/server.js",
        "transformer:serve:development": "NODE_ENV=development node ./transformer/dist/server.js",
        "transformer:dev": "nodemon --config nodemon.transformer.json",
        "container:start": "docker-compose up",
        "container:rebuild": "docker-compose up -d --no-deps --build",
        "audit": "audit",
        "test": "jest --verbose --coverage",
        "docker": "docker build . -t austinfleming-server"
    },
    "dependencies": {
        "@celo/contractkit": "^2.1.0",
        "@repo/common": "*",
        "@supabase/supabase-js": "^1.33.3",
        "axios": "^0.27.2",
        "bullmq": "^2.1.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "helmet": "^5.0.2",
        "is-ipfs": "^7.0.2",
        "web3": "^1.8.0",
        "web3.storage": "^4.4.0",
        "yup": "^0.32.11"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.23",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "esbuild": "^0.14.34",
        "eslint": "^8.10.0",
        "eslint-plugin-jest": "^26.1.1",
        "eslint-plugin-no-unsanitized": "^4.0.1",
        "eslint-plugin-security": "^1.4.0",
        "eslint-plugin-sonarjs": "^0.12.0",
        "eslint-plugin-sort-keys-fix": "^1.1.2",
        "eslint-plugin-typescript-sort-keys": "^2.1.0",
        "eslint-plugin-unicorn": "^41.0.0",
        "jest": "^27.5.1",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.4",
        "typescript": "^4.6.2"
    }
}
